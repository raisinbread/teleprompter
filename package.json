{
  "name": "teleprompter",
  "version": "1.0.0",
  "description": "An MCP server that manages and exposes tools to allow prompt re-use with LLMs.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "lint": "npm run lint:eslint && npm run lint:types",
    "lint:eslint": "eslint . --ignore-pattern \"dist/\"",
    "lint:types": "tsc",
    "prepare": "husky",
    "test": "NODE_ENV=test vitest"
  },
  "keywords": [
    "mcp",
    "llm",
    "ai",
    "prompts"
  ],
  "author": "John Anderson",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "dotenv": "^16.5.0",
    "ollama": "^0.5.16",
    "openai": "^5.3.0",
    "vectra": "^0.11.1"
  },
  "devDependencies": {
    "vitest": "^3.2.3",
    "@eslint/js": "^9.12.0",
    "@types/node": "^22.10.2",
    "eslint": "^9.12.0",
    "globals": "^16.0.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.8.1"
  },
  "lint-staged": {
    "*.ts?(x)": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
